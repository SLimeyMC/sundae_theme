<section class="hero">
    <h1>
        {'Sundae'.split('').map((char, index) => (
                <span style={`--delay: ${index * 1}`}>{char}</span>
        ))}
    </h1>
    <h2>A minimally flavored theme to satiate your own hunger</h2>
    <p>available in vanilla flavor (<em>for now!</em>)</p>
</section>

<style>
    @property --informality {
        syntax: "<integer>";
        inherits: false;
        initial-value: 0;
    }

    section {
        display: grid;
        place-content: center;
        place-items: center;
        height: 85svh;
    }

    h1 {
        --bouncy: -10;
        --informality: 0;

        font-size: 10em;
        line-height: 0;
        margin: .3em;
        transform: skewY(-7deg);
        text-shadow: 2px 2px 0 var(--truffle-black);

        counter-reset: delay;

        animation: wavy-text 2s infinite alternate linear;

        transition: 2s;

        font-variation-settings:
                "BNCE" var(--bouncy),
                "INFM" var(--informality);
    }

    h1:hover {
        --informality: 100;

        font-variation-settings:
                "BNCE" var(--bouncy),
                "INFM" var(--informality);
    }

    h1 > span:first-child {
        font-size: 1.5em;
    }

    h1 > span {
        animation: moving-text-color 10s alternate infinite step-end;
        transition: 1s;
        padding: 0;
        transform: translate(0);
        animation-delay: calc(var(--delay) * -1s);

        counter-increment: delay;
    }

    h1:hover > span {
        font-size: 0.9em;
    }

    h1:hover > span:hover{
        padding: 0.1em;
        font-size: 1.3em;
    }

    h1:hover > span:hover+*,
    h1:hover > span:has(+ :hover) {
        padding: 0.075em;

    }

    h1:hover > span:not(:hover) {
        --default-color: var(--frosting-white);
    }

    @keyframes wavy-text {
        from {
            --bouncy: -10;
        }
        50% {
            --bouncy: 10;
        }
        to {
            --bouncy: -10;
        }
    }


    @keyframes moving-text-color {
        0% {
            color: var(--default-color, var(--honey-yellow));
        }
        11% {
            color: var(--default-color, var(--mango-orange));
        }
        22% {
            color: var(--default-color, var(--cocoa-brown));
        }
        33% {
            color: var(--default-color, var(--minty-blue));
        }
        44% {
            color: var(--default-color, var(--matcha-green));
        }
        55% {
            color: var(--default-color, var(--sherbet-lime));
        }
        66% {
            color: var(--default-color, var(--coconut-aqua));
        }
        77% {
            color: var(--default-color, var(--glacier-capri));
        }
        88% {
            color: var(--default-color, var(--frost-lavender));
        }
        100% {
            color: var(--default-color, var(--bubblegum-pink));
        }
    }

    h2 {
        font-optical-sizing: auto;
        font-weight: 600;
        font-style: normal;
        color: var(--truffle-black);
        line-height: 0;
        z-index: 1;
        text-shadow:
                .05em .05em 0 var(--milk-cream),
                -.05em .05em 0 var(--milk-cream),
                .05em -.05em 0 var(--milk-cream),
                -.05em -.05em 0 var(--milk-cream);
    }

    p {
        font-optical-sizing: auto;
        line-height: 0;
        color: var(--plum-purple);
        margin: -1em;
    }
</style>